
#include <iostream>
using namespace std;

int main() {

  int n;
  cin>>n;
  int i = 1;
  while(i<=n){

      //Print 1st triangle
      int space = n - i;
      while(space){
          cout<<" ";
          space = space - 1;
      }
      
      //Print 2nd triangle
      int j = 1;
      while(j<=i){
          cout<<j;
          j = j + 1;
      }

      //Print 3rd triangle
      int star = i - 1;
      while(star){
          cout<<star;
          star = star - 1;
      }
     cout<<endl;
     i = i + 1;


  }	
  


	return 0;
}

